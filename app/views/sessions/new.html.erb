<div class='row'>
	<div class="col-md-6 offset-md-3" id='login'>
		<h1>Log In</h1>

		<%= form_with(scope: :session, url: login_path, local:true) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :password %>
			<%= f.text_field :password %>

			<%= f.submit "Login" %>
		<% end %>
	</div>
</div>