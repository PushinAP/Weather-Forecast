<h1>List forecast weather in the city</h1>
<div id="all-city">
	<table>
		<% @cities.each do |city|  %>
			<tr>
				<td>Weather in <%= city.city_name %></td>
				<td><%= link_to 'Show', city_path(city), class:"btn", id:"show-btn"%></td>

				<% if current_user.admin? %>
					<td><%= link_to 'Delete', city_path(city),
										method: :delete, class:"btn", id:"delete-btn" %></td>
				<% end %>
				
			</tr>
		<% end %>
	</table>
</div>
<% if current_user.admin? %>
	<div id='add-city'>
		<%=  link_to 'Add city', new_city_path, class:"btn btn-outline-primary"%>
	</div>
<% end %>